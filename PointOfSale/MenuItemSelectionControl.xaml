<UserControl x:Class="PointOfSale.MenuItemSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1152">
    <Grid Button.Click="HandleClick">
        <Grid.Resources>

            <Style TargetType="Button">
                <Setter Property="FontSize" Value="25"/>
                <Setter Property="Margin" Value="5"/>
                <Style.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </Style.Resources>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height=".5*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="30" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center">
                Entrees
        </TextBlock>
        <Button x:Name="VirgoClassicGyroButton" Grid.Column="0" Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Padding="10" Text="Virgo Classic Gyro" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
                <Image Source="C:\Users\acduv\Pictures\Pork-Gyros-with-Homemade-Tzatziki-tall-FS.jpg" Height="82" Width="45"/>
            </StackPanel>
        </Button>
        <Button x:Name="LeoLambGyroButton" Grid.Column="0" Grid.Row="2">
            <StackPanel Orientation="Horizontal">
                <TextBlock Padding="10" Text="Leo Lamb Gyro" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
                <Image Source="C:\Users\acduv\Pictures\leoLambGyro.jpg" RenderTransformOrigin="0.5,0.5" Height="58" Width="76">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="91.065"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
            </StackPanel>
        </Button>
        <Button x:Name="ScorpioSpicyGyroButton" Grid.Column="0" Grid.Row="3">
            <StackPanel Orientation="Horizontal">
                <TextBlock Padding="10" Text="Scorpio Spicy Gyro" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
                <Image Source="C:\Users\acduv\Pictures\Arby%u2019s-Debuts-New-Spicy-Greek-Gyro-678x381.jpg" Height="56" Width="75"/>
            </StackPanel>
        </Button>
        <Button x:Name="PiscesFishDishButton" Grid.Column="0" Grid.Row="4">
            <StackPanel Orientation="Horizontal">
                <TextBlock Padding="10" Text="Pisces Fish Dish" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
                <Image Source="C:\Users\acduv\Pictures\chargrilled-fish-with-green-chilli-coriander-and-coconut-relish-70446-1.jpeg" Height="82" Width="45"/>
            </StackPanel>
        </Button>
        <TextBlock FontSize="30" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center">
                Sides
        </TextBlock>
        <Button x:Name="TaurusTabulehButton" Grid.Column="1" Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Padding="10" Text="Taurus Tabuleh" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
                <Image Source="C:\Users\acduv\Pictures\Flickr_-_cyclonebill_-_Tabbouleh.jpg" Height="56" Width="97"/>
            </StackPanel>
        </Button>
        <Button x:Name="GeminiGrapeLeavesButton" Grid.Column="1" Grid.Row="2">
            <TextBlock Padding="10" Text="Gemini Stuffed Grape Leaves" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
        </Button>
        <Button x:Name="SagittariusSaladButton" Grid.Column="1" Grid.Row="3">
            <TextBlock Padding="5" Text="Sagittarius Greek Salad" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
        </Button>
        <Button x:Name="AriesFriesButton" Grid.Column="1" Grid.Row="4">
            <StackPanel Orientation="Horizontal">
                <TextBlock Padding="10" Text="Aries Fries" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
                <Image Source="C:\Users\acduv\Pictures\Copycat-McDonalds-French-Fries-.jpg" Height="82" Width="45"/>
            </StackPanel>
        </Button>
        <TextBlock FontSize="30" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center">
                Drinks
        </TextBlock>
        <Button x:Name="LibraLibationButton" Grid.Column="2" Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Padding="10" Text="Libra Libation" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
                <Image Source="C:\Users\acduv\Pictures\7dbd1cbb-d597-4b8e-83b0-230d7532424c.jpg" Height="82" Width="45"/>
            </StackPanel>
        </Button>
        <Button x:Name="CapricornTeaButton" Grid.Column="2" Grid.Row="2">
            <TextBlock Padding="0" Text="Capricorn Mountain Tea" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
        </Button>
        <TextBlock FontSize="30" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                Treats
        </TextBlock>
        <Button x:Name="AquariusIceButton" Grid.Column="2" Grid.Row="4">
            <StackPanel Orientation="Horizontal">
                <TextBlock Padding="10" Text="Aquarius Ice" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
                <Image Source="C:\Users\acduv\Pictures\ice treat.jpg" Height="84" Width="66" RenderTransformOrigin="1.9,0.248"/>
            </StackPanel>
        </Button>
        <Button x:Name="CancerCakeButton" Grid.Column="2" Grid.Row="5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Padding="10" Text="Cancer Halva Cake" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
                <Image Source="C:\Users\acduv\Pictures\Greek-Halva-recipe-Semolina-Pudding-with-Raisins-scaled.jpeg" Height="79" Width="55" RenderTransformOrigin="1.9,0.248"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
